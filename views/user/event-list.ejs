<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/user-navigation.ejs') %>
            <section class="py-5">
                <div class="container py-5">
                    <div class="row mb-4 mb-lg-5">
                        <div class="col-md-8 col-xl-6 text-center mx-auto">
                            <h1 class="fw-bold">Events</h1>
                            <p class="text-muted w-lg-50">List of all the events you can participate and win!.&nbsp;</p>
                        </div>
                    </div>
                    <% if (events.length > 0) { %>
                    <div class="row mx-auto" style="/*max-width: 700px;*/">
                        <div class="col">
                            <section class="py-2">
                                <div class="container py-2">
                                    <div class="row row-cols-1 row-cols-md-2 mx-auto" style="max-width: 900px;">
                                        <% for (let event of events) { %>
                                        <div class="col mb-4">
                                            <div>
                                                <a href="#">
                                                    <img class="rounded img-fluid shadow w-100 fit-cover" src="/<%= event.imageUrl %>" alt="<%= event.title %>" style="height: 250px;">
                                                </a>
                                                <div class="py-4">
                                                    <span class="badge bg-primary mb-2">Price - <%= event.price %></span>
                                                    <h4 class="fw-bold"><%= event.title %></h4>
                                                    <p class="text-muted"><%= event.description %></p>
                                                </div>
                                            </div>
                                            <div class="d-flex">
                                                <a href="/events/<%= event._id %>" class="btn btn-primary" type="button">Details</a>
                                                <% if (isAuthenticated) { %>
                                                    <%- include('../includes/register.ejs', {event: event}) %>
                                                <% } %>
                                            </div>
                                            
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                    <% } else { %>
                        <div class="container">
                            <div class="row mb-4 mb-lg-5">
                                <div class="col-md-8 col-xl-6 text-center mx-auto">
                                    <h1>No Events Found!</h1>
                                    
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </section>
<%- include('../includes/end.ejs') %>