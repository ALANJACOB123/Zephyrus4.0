<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/user-navigation.ejs') %>
        <section class="py-5">
            <div class="container py-5">
                <div class="row mb-4 mb-lg-5">
                    <div class="col-md-8 col-xl-6 text-center mx-auto">
                        <h1 class="fw-bold">Your Events</h1>
                        <p class="text-muted w-lg-50">List of all the events that you have registered and are elligible to participate.</p>
                    </div>
                </div>
            </div>
            <% if (orders.length <= 0) { %>
                <div class="container">
                    <div class="row mb-4 mb-lg-5">
                        <div class="col-md-8 col-xl-6 text-center mx-auto">
                            <h1>No Registrations Found!</h1>     
                        </div>
                    </div>
                </div>
            <% } else { %>
            <% orders.forEach(order => { %>
            <div class="mb-5 py-5 p-lg-5 bg-dark">
                <div class="row row-cols-1 row-cols-md-2 mx-auto" style="max-width: 900px;">
                    <h5 class="py-2 fw-bold">Name: <%= name %></h5> 
                    <h5 class="py-2 fw-bold">Order ID: <%= order._id %></h5>
                    <% order.events.forEach(e => { %>   
                    <div class="col-md-12 mb-5">
                        <div class="card shadow-sm">
                            <div class="rounded card-body py-4 px-md-5">
                                <div class="bs-icon-lg d-flex justify-content-center align-items-center mb-3 bs-icon" style="top: 1rem;right: 1rem;position: absolute;"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-check text-success" style="font-size: 55px;">
                                        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"></path>
                                    </svg></div>
                                <h5 class="fw-bold card-title"><%= e.event.title %></h5>
                                <p class="text-muted card-text mb-4">event-date</p>
                                <button  class="btn btn-primary shadow" type="button">Brochure</button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <div>
                        <a href="/orders/<%= order._id %>" class="btn btn-primary shadow">Receipt</a>
                    </div>
                </div>
            </div>
            <% }); %>
            <% } %>
        </section>
        <%- include('../includes/end.ejs') %>