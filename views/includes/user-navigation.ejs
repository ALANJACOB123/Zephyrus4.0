<!-- header  -->
<header id="home">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark pt-2 pb-2 ">
    <div class="container">
      <a href="#" class="navbar-brand">Zephyrus Logo</a>
      <button
        class="navbar-toggler"
        data-toggle="collapse"
        data-target="#navbarCollapse"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav">
          <li class="nav-item px-2">
            <a href="/" class="nav-link <%= path === '/' ? 'active' : '' %>">Explore</a>
          </li>
          <li class="nav-item px-2">
            <a href="/events" class="nav-link <%= path === '/events' ? 'active' : '' %>"">Events</a>
          </li>
          <li class="nav-item px-2">
            <a href="/register" class="nav-link <%= path === '/register' ? 'active' : '' %>"">Register</a>
          </li>
        </ul>
        <% if (!isAuthenticated) { %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="/login" class="btn btn-secondary">
                Login
              </a>
            </li>
          </ul>
        <% } else { %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown mr-3 mt-1">
            <a
                href="#"
                class="nav-link d-flex"
                data-toggle="dropdown"
              >
                <% if (userImage) { %>
                    <img class="user-img" src="<%= userImage %>" alt="1" />
                    <i class="fa fa-caret-down pt-2 pl-2"></i>
                <% } else { %>
                  Welcome
                  <i class="fa fa-caret-down pt-1 pl-2"></i>
                <% } %>
              </a>
            
            <div class="dropdown-menu">
              <a href="/user-profile" class="dropdown-item">
                Profile
              </a>
              <a href="/orders" class="dropdown-item">
                Registrations
              </a>
            </div>
          </li>
          <% if (userImage) { %>
            <li class="nav-item mt-2">
              <form action="/logout" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button type="submit" class="btn btn-secondary">Logout</button>
              </form>
            </li>
        <% } else { %>
          <li class="nav-item mt-1">
            <form action="/logout" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button type="submit" class="btn btn-secondary">Logout</button>
            </form>
          </li>
        <% } %>
        </ul>
        <% } %>
      </div>
    </div>
  </nav>
</header>
<!-- end of header  -->
