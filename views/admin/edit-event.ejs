<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/event.css">
</head>

<body>
   <%- include('../includes/admin-navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-event<% } else { %>add-event<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= event.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= event.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= event.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= event.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= event._id %>" name="eventId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Event<% } else { %>Add Event<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>