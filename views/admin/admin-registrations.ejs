<body>
    <%- include('../includes/admin-navigation.ejs') %>
    <main>
      <div class="grid">
        <h1>Registrations : <%=totalUsers %><a href="/admin/registrations/download">Download</a></h1>
        <h1>Registrations with payment : <%=totalOrders %></h1>
                        <% for (let event of events) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%=event.title %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">
                                        <%= event.registrations %>
                                    </h2>
                                </div>
                                <% if (event.registrations > 0) 
                                { %><a href="/admin/registrations/<%= event.title %>">Download</a> <% } %> 
                            </article>
                            <% } %>
                    </div>
    </main>
    
<%- include('../includes/end.ejs') %>