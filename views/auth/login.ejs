<%- include('../includes/head.ejs') %>
</head>

<body style="/*background: url(&quot;design.jpg&quot;);*/background-position: 0 -60px;">
   <%- include('../includes/user-navigation.ejs') %>
   <div class="area" >
    <ul class="circles mb-0">
        <li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li>
    </ul>
	<section class="">
        <div class="container pt-5">
            <div class="row mb-4 mb-lg-5">
                <div class="col-md-8 col-xl-6 text-center mx-auto" style="z-index: 1000;">
                    <p class="fw-bold text-success mb-2" style="font-size: 40px;color: rgb(25, 245, 170);">Login</p>
                    <h2 class="fw-bold" style="font-size: 15px;">Don't Have an account?<a href="/signup" style="margin-left: 5px;color: rgb(25, 245, 170);">Register</a>&nbsp;</h2>
                    <!-- Error Alert -->
                    <% if (errorMessage) { %>
                        <div class="alert alert-danger alert-dismissible fade show" style="margin-right: 120px;margin-left: 120px;">
                            <strong>Error!</strong> <%= errorMessage %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                    <% if (emailsent) { %>
                        <div class="alert alert-success alert-dismissible fade show" style="margin-right: 57px;margin-left: 57px;">
                            <strong>Success!</strong> <%= emailsent %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="card ">
                        <div class="card-body text-center d-flex flex-column align-items-center" style="margin-top: -28px;">
                            <form action="/login" method="post">
                                <div class="mb-3">
									<input class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" value="<%= oldInput.email %>" placeholder="Email">
								</div>
                                <div class="mb-3">
									<input class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" value="<%= oldInput.password %>" placeholder="Password">
								</div>
								<input type="hidden" name="_csrf" value="<%= csrfToken %>">
								<a href="/reset" style="text-align: right;"><br><span style="color: rgb(176, 189, 211);">Forgot your password?</span><br><br></a>
                                <div class="mb-3">
									<button class="btn btn-primary shadow d-block w-100" type="submit">Log in</button>
								</div>
                            </form>
                            <br>
							<p>OR</p>
                            <p>Sign In With&nbsp;<span style="color: rgb(25, 245, 170);">Google</span></p>
							<form action="/google-login" method="POST">
								<input type="hidden" name="_csrf" value="<%= csrfToken %>">
								<button class="btn btn-primary" type="submit" style="font-size: 16px;width: 60px;height: 60px;border-radius: 50%;padding: 0px;">&nbsp;<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-google" style="font-size: 24px;">
									<path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"></path>
								</svg>&nbsp;</button>
							</form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
<%- include('../includes/end-no-footer.ejs') %>